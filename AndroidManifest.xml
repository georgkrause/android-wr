<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.georgkrause.androidwr"
    android:installLocation="auto"
    android:versionCode="0010304"
    android:versionName="0.1.3" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:smallScreens="true" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".depreciation.LinearDepreciationActivity"
            android:label="@string/title_activity_rechner" >
        </activity>
        <activity
            android:name=".depreciation.ResultActivity"
            android:label="@string/title_activity_ergebnis" >
        </activity>
        <activity android:name="Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>